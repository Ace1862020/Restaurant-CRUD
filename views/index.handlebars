<!-- search bar -->
<div class="container mt-4">
  <div class="row justify-content-center" id="search-bar">
    <div class="col-2">
      <div class="input-group-append justify-content-center">
        <a href="/restaurants/add" class="btn btn-danger" role="button" aria-pressed="true">Create</a>
      </div>
    </div>

    <div class="col-4">
      <form action="/search">
        <div class="input-group mb-3">

          <input type="text" name="keyword" value="{{keyword}}" class="form-control rounded-left"
            placeholder="輸入餐廳名稱、分類" aria-label="Restaurant Name..." aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit" id="search-button"><i
                class="fas fa-search"></i></button>
          </div>
        </div>
      </form>

    </div>
    <div class="col-3">
      <div class="btn-group">
        <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown">
          {{#if sortName}}
          {{sortName}}
          {{else}}
          請選擇排序方式
          {{/if}}
        </button>
        <div class="dropdown-menu">
          <div class="dropdown-header">A->Z</div>
          {{#each sortInfos}}
          <a class="dropdown-item" href="/sort/{{this.condition}}/{{this.name}} A->Z">{{this.name}}</a>
          {{/each}}

          <div class="dropdown-header">Z->A</div>
          {{#each sortInfos}}
          <a class="dropdown-item" href="/sort/-{{this.condition}}/{{this.name}} Z->A">{{this.name}}</a>
          {{/each}}
        </div>
      </div>

    </div>
  </div>
</div>
<!-- restaurant list -->
<div class="container mt-4">
  <ul class="list-unstyled">
    {{#each restaurants}}
    <li class="media mb-4 row justify-content-center ">
      <a href="/restaurants/detail/{{this._id}}" class="px-2 py-4 col-md-10 col-11">
        <div class="row">
          <div class="restaurantImg col-3 align-self-center">
            <img class="mr-3" src="{{this.image}}" alt="{{this.name}}">
          </div>

          <div class="media-body col-8">
            <div>
              <h5 class="mt-0 mb-1 font-weight-bold">{{this.name}}</h5>
              {{this.description}}
            </div>

            <div class="stars d-flex mt-3">
              {{#times this.rating}}{{/times}}
            </div>

          </div>
        </div>
      </a>
      <div class="media-btn col-1 align-self-center d-flex">
        <a href="/restaurants/edit/{{this._id}}" class="p-2"><i class="far fa-edit h3"></i></a>
        <form action="/restaurants/delete/{{this._id}}?_method=DELETE" method="POST" class="p-2">
          <button type="submit"><i class="far fa-trash-alt h3"></i></button>
        </form>
      </div>
    </li>
    {{/each}}

  </ul>

</div>